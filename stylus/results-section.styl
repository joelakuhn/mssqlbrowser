.results-section
  font-size: 12px;

  table
    table-layout: auto;
    min-width: 100%;
    padding: 10px;
    vertical-align: top;
    border-collapse: collapse;

  th
    text-align: left;
    cursor: pointer;

  th::after
    content: ' \25BC';
    color: transparent;

  .sort-asc::after
    content: ' \25BC';
    color: #000

  .sort-desc::after
    content: ' \25B2';
    color: #000

  td, th
    padding: 3px 5px;
    white-space: nowrap;

  tr:nth-child(odd)
    background-color: #f7f7f7;

  tr:nth-child(1)
    background-color: #fff;
    border-bottom: 1px solid #dfdfdf
    display: block
    position: fixed
    margin-top: 0




  .message
    padding: 10px;

  .error
    color: $red



.type-datetime
  white-space: nowrap;